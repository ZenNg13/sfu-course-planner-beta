# Environment variables for SFU Scheduler Backend

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./sfu_scheduler.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://sfu_user:sfu_password@localhost:5432/sfu_scheduler

# App Settings
DEBUG=true
APP_NAME="SFU Scheduler API"
APP_VERSION="1.0.0"

# API Configuration
API_V1_PREFIX="/api/v1"

# CORS - Allowed Origins (JSON array format)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# SFU API Settings
SFU_API_BASE_URL="https://www.sfu.ca/bin/wcm/course-outlines"
SFU_COURYS_BASE_URL="https://courses.students.sfu.ca"

# Crawler Settings
CRAWLER_CONCURRENCY_LIMIT=5
CRAWLER_TIMEOUT=30

# Background Worker Settings
SEAT_CHECK_INTERVAL_MINUTES=10
